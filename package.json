{
  "name": "famille-accueil-animaux",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "prisma:generate": "cd apps/backend && npx prisma generate",
    "prisma:migrate": "cd apps/backend && npx prisma migrate dev",
    "prisma:studio": "cd apps/backend && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
  "@rollup/rollup-darwin-arm64": "*",
  "@rollup/rollup-linux-x64-gnu": "*"
}
}
